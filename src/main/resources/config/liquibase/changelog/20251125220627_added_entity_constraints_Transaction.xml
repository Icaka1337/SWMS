<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <!--
        Added the constraints for entity Transaction.
    -->
    <changeSet id="20251125220627-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="transaction"
                                 constraintName="fk_transaction__product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product"
                                 />

        <addForeignKeyConstraint baseColumnNames="source_location_id"
                                 baseTableName="transaction"
                                 constraintName="fk_transaction__source_location_id"
                                 referencedColumnNames="id"
                                 referencedTableName="warehouse_location"
                                 />

        <addForeignKeyConstraint baseColumnNames="target_location_id"
                                 baseTableName="transaction"
                                 constraintName="fk_transaction__target_location_id"
                                 referencedColumnNames="id"
                                 referencedTableName="warehouse_location"
                                 />
    </changeSet>
</databaseChangeLog>
